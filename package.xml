<?xml version="1.0"?>
<package format="3">
  <name>hdl_graph_slam</name>
  <version>0.0.0</version>
  <description>The hdl_graph_slam package</description>

  <maintainer email="koide@aisl.cs.tut.ac.jp">koide</maintainer>

  <license>BSD</license>

  <!-- ROS1: Dependencies needed to compile this package -->
  <buildtool_depend condition="$ROS_VERSION == 1">catkin</buildtool_depend>
  <depend condition="$ROS_VERSION == 1">ndt_omp</depend>
  <depend condition="$ROS_VERSION == 1">fast_gicp</depend>
  <depend condition="$ROS_VERSION == 1">pcl_ros</depend>
  <depend condition="$ROS_VERSION == 1">roscpp</depend>
  <depend condition="$ROS_VERSION == 1">rospy</depend>
  <depend condition="$ROS_VERSION == 1">nodelet</depend>
  <depend condition="$ROS_VERSION == 1">geodesy</depend>
  <depend condition="$ROS_VERSION == 1">nmea_msgs</depend>
  <depend condition="$ROS_VERSION == 1">sensor_msgs</depend>
  <depend condition="$ROS_VERSION == 1">geometry_msgs</depend>
  <depend condition="$ROS_VERSION == 1">message_generation</depend>
  <depend condition="$ROS_VERSION == 1">libg2o</depend>

  <!-- If ROS1 pograms fail during execution, you might want to comment in the next lines -->
